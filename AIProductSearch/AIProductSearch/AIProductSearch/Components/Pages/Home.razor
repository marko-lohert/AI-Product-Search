@page "/"
@rendermode InteractiveServer

<PageTitle>AI Product Search</PageTitle>

<h3 style="display:flex;justify-content:center;margin:50px">AI Product Search</h3>

<div style="display:flex;flex-direction:row;justify-content:center;margin:50px">
    <input type="text" @bind="SearchText" placeholder="Describe the product you are looking for" style="width:500px;margin-right:30px" />
    <button @onclick="Search">Search</button>
</div>

@if (IsOutputVisible)
{
    <div style="display:flex;flex-direction:row;justify-content:center">
        @if (!string.IsNullOrEmpty(Result))
        {
            <p style="max-width:700px">@Result</p>
        }
        else
        {
            <p style="max-width:700px">Thinking</p>
        }
    </div>
}